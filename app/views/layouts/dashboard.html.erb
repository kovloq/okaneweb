doctype html
html
head
meta charset="utf-8
meta http-equiv="X-UA-Compatible" content="IE=edge"
meta content="width=device-width  initial-scale=1" name="viewport"
meta content="Expense Manager" name="description"
meta content="Perdana Adhitama" name="author"
title Okane
link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css"
link rel="shortcut icon" href="favicon.ico"
<%= stylesheet_link_tag    'dashboard', media: 'all', 'data-turbolinks-track' => true %>
  
<%= javascript_include_tag 'dashboard', 'data-turbolinks-track' => true %>
  
<%= csrf_meta_tags %>
javascript:
    jQuery(document).ready(function() {    
    Metronic.init(); // init metronic core components
	Layout.init(); // init current layout
 });
	

body class="page-header-fixed page-footer-fixed page-container-bg-solid page-sidebar-closed-hide-logo"
<!-- BEGIN HEADER -->
div.page-header.navbar.navbar-fixed-top
	<!-- BEGIN HEADER INNER -->
	div.page-header-inner
		<!-- BEGIN LOGO -->
		div.page-logo
			a href="#"
				<%= image_tag("logo_okane.png", :height=>"14",:alt => "Logo",:class => "logo-default") %>
			div.menu-toggler.sidebar-toggler
		<!-- BEGIN RESPONSIVE MENU TOGGLER -->
		a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse"
		<!-- END RESPONSIVE MENU TOGGLER -->
		
		<!-- BEGIN PAGE TOP -->
		div.page-top
			
			<!-- BEGIN TOP NAVIGATION MENU -->
			div.top-menu
				ul.nav.navbar-nav.pull-right					
					<!-- BEGIN USER LOGIN DROPDOWN -->
					li.dropdown.dropdown-user
						a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true"
							img alt="" class="img-circle" src=""/
							span.username.username-hide-on-mobile
								<%= session[:admin_name] %>
							i.fa.fa-angle-down
						ul.dropdown-menu.dropdown-menu-default
							li
								a href="extra_profile.html" i.icon-user My Profile
							
							li
								<%= link_to({controller:"administrator/login",action:"logout"}) do %>
								
									i.icon-key
									Log Out
								<% end %>

div.clearfix

	<!-- BEGIN CONTAINER -->
	div.page-container
		<!-- BEGIN SIDEBAR -->
		div.page-sidebar-wrapper
			div.page-sidebar.navbar-collapse.collapse
				<!-- BEGIN SIDEBAR MENU -->
				
				<ul class="page-sidebar-menu page-sidebar-menu-hover-submenu " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200">
					<li class="start">
						<%= link_to('/administrator/', {:name => 'Dashboard',:title=>'Dashboard'}) do %>
                        <i class="icon-home"></i>
                        <span class="title">Dashboard</span>
                        <% end %>
								
					</li>
					<li>
						<%= link_to('/administrator/admin', {:name => 'Admin',:title=>'Admin'}) do %>
                        <i class="icon-user"></i>
                        <span class="title">Admin</span>
                         <% end %>
								
					</li>
					<li>
						<%= link_to('/administrator/member', {:name => 'User',:title=>'User'}) do %>
                        <i class="icon-user"></i>
                        <span class="title">User</span>
                        <% end %>
					</li>
					<li>
						<%= link_to('/administrator/category', {:name => 'Category',:title=>'Category'}) do %>
                        <i class="icon-calendar"></i>
                        <span class="title">Category</span>
                        <% end %>
					</li>
							
					<li>
						<%= link_to('/administrator/contact', {:name => 'News',:title=>'Contact'}) do %>
                        <i class="icon-calendar"></i>
                        <span class="title">Contact</span>
                        <% end %>
					</li>
					<li>
						<%= link_to('/administrator/faq', {:name => 'FAQ',:title=>'FAQ'}) do %>
                        <i class="icon-question"></i>
                        <span class="title">FAQ</span>
                        <% end %>
					</li>
				</ul>
				<!-- END SIDEBAR MENU -->
		<!-- BEGIN CONTENT -->
		div.page-content-wrapper
			div.page-content
				== yield
	<!-- BEGIN FOOTER -->
	div.page-footer
		div.page-footer-inner
			 2016 &copy; Created by: Dana.
		
		div.scroll-to-top
			i.icon-arrow-up