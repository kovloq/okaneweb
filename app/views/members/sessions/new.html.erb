

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h3 class="form-title">Login</h3>
    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="<%= key %> alert-danger" role="alert"><%= value %></div>
    <% end %>
      <div class="form-group">
          
          <%= f.label :email %>
         <div class="input-icon">
            <i class="fa fa-user"></i>
        <%= f.email_field :email, autofocus: true,class: "form-control"  %>
        </div>
            
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <div class="input-icon">
                    <i class="fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off",class: "form-control"  %>
        </div>
      </div>

      <div class="form-actions">
      <% if devise_mapping.rememberable? -%>
        
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        
      <% end -%>

    
        <%= f.submit "Log in", :class =>"btn green-haze pull-right" %>
      </div>
        <%- if devise_mapping.omniauthable? %>
        <div class="login-options">
        <h4>Or login with</h4>
        <ul class="social-icons">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <li><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider),class:"#{provider}","data-original-title"=>"#{provider}" %></li>
          <% end -%>
          </ul>
        </div>
        <% end -%>
      
    <% end %>

    <%= render "members/shared/links" %>

       
