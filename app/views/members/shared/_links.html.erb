<%- if controller_name != 'sessions' %>
  <p>Click 
  <%= link_to "here", new_session_path(resource_name),class:"" %> to login
</p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="create-account">
			<p>
				 Don't have an account yet ?&nbsp; 
  <%= link_to "Create an account", new_registration_path(resource_name),class:"" %></p>
</div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="forget-password">
	<h4>Forgot your password ?</h4>
		<p> no worries, click 
  <%= link_to "here", new_password_path(resource_name),class:"" %>
  to reset your password.</p>
 </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div>
	<p>Didn't receive unlock instructions? click
  <%= link_to "here", new_confirmation_path(resource_name),class:"" %>
</p>
</div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "", new_unlock_path(resource_name),class:"btn btn-default" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider),class:"btn btn-default" %><br />
  <% end -%>
<% end -%>
