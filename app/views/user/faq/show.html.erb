<h3 class="page-title">FAQ</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "user/home", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">FAQ</a>
        </li>
    </ul>
</div>

<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-question "></i>
            <span class="caption-subject bold uppercase">FAQ</span>
            
        </div>
        
    </div>
                <div id="accordion" class="panel-group accordion">
                    <% @faq.each do |t| %>
                    <div class="panel">
                        <div class="panel-heading">
                            <h5 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= t.id %>" class="accordion-toggle collapsed">
                                    <i class="icon-arrow"></i>
                                    <%= t.title %>
                                </a>
                            </h5>
                        </div>
                        <div style="height: 0px;" id="collapse<%= t.id %>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <%= t.description.html_safe %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>


</div>
