
<h3 class="page-title">Expense</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "user/home", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        <li>
            <%= link_to "Transaction", :controller => "user/transaction", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        <li>
            <%= link_to "Expense", :controller => "user/expense", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
            </li>
        <li>
        <a href="#">New</a>
        </li>
    </ul>
</div>

<% if @transaction.errors.full_messages.any? %>
	<% @transaction.errors.full_messages.each do |error_message| %>
	<div class="alert alert-danger" role="alert">
		<%= error_message  %>
	</div>
	<% end %>
<% end %>


<div class="portlet box green">
	<div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus"></i>
            New Expense
        </div>
    </div>
    <div class="portlet-body form">
	                     		<%= form_for @transaction,url: {action: "create"} do |f| %>
	                     		<div class="form-body">
								  <div class="form-group">
									<label for="title" >Title</label>
									<%= text_field(:transaction, :name,class:"form-control",minlength:"2",placeholder:"Shopping") %>
								  </div>
								  <div class="form-group">
									<label for="title" >Amount</label>
									<%= text_field(:transaction, :amount,class:"form-control amount",minlength:"2",placeholder:"") %>
								  </div>
									<div class="form-group">
										<label for="title" >Category</label>
										<select class="form-control select2me" name="transaction[category_id]">
											<option value="">Select Category</option>
											<% @category.each do |c| %>
											<option value="<%= c["id"] %>"><%= c["name"] %></option>
											<% end %>
										</select>
									</div>
									<div class="form-group">
										<label for="title" >Date</label>
										<div class="input-group date date-picker" data-provide="datepicker" data-date-format="yyyy-mm-dd">
											<input type="text"  class="form-control" name="transaction[date]" readonly>
											<span class="input-group-btn">
											<button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
											</span>
										</div>
									</div>
									<div class="form-group">
										<label for="title" >Description</label>
										<%= text_area(:transaction, :description,class:"form-control",placeholder:"Description") %>
									</div>
								</div>

								  <div class="form-actions">
								  	<input type="submit" class="btn green" value="Add"> 
								  	<a href="#" class="btn back-cancel default">Cancel</a>
								  </div>
								<% end %>
	</div>
</div>		
