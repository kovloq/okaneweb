<h3 class="page-title">Password</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "user/home", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        <li>
            <a href="#" title="setting" alt="setting">Setting</a>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">Password</a>
        </li>
    </ul>
</div>

<% flash.each do |key, value| %>
		    <div class="alert alert-<%= key %>"><%= value %></div>
		  <% end %>
		  
<div class="portlet box green">
	<div class="portlet-title">
        <div class="caption">
            <i class="fa fa-lock"></i>
            Password
        </div>
    </div>
    <div class="portlet-body form">
    		   
    	
		<%= form_for @profile,url: {action: "update_password"} do |f| %>
		<div class="form-body">
			<div class="form-group">
				<label for="title" >Current Password</label>
				<input type="password" name="member[current_password]" class="form-control" required>
				
			</div>
			<div class="form-group">
				<label for="title" >New Password</label>
				<input type="password" name="member[password]" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="title" >Confirm Password</label>
				<input type="password" name="member[password_confirmation]" class="form-control" required>
			</div>
			
			
		</div>
		<div class="form-actions">
				  	<input type="submit" class="btn green" value="Update"> 
				  	<a href="#" onclick="goBack()" class="btn back-cancel default">Cancel</a>
		 </div>
		<% end %>
					
	</div>
</div>
<script>
function goBack() {
    window.history.back();
}
</script>