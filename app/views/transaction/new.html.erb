<div class="page-title-breadcrumb">
	<div class="page-header pull-left">
		<div class="page-title">Transaction</div>
	</div>
	<ol class="breadcrumb page-breadcrumb hidden-xs">
        <li><i class="fa fa-home"></i>&nbsp;
        	<%= link_to "Home", :controller => "transaction", :action => "index" %>
        	&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">Transaction</li>
        <!-- <li class="active">Invoice</li> -->
    </ol>
</div>
<div class="box-content">
	<div class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="panel">
					<div class="panel-heading">
						<div class="row" style="padding-top:10px;padding-bottom:10px">
							
	                     	<div class="panel-body">

	                     		<%= form_for :transaction, do |f| %>
								  <div class="form-group" style="text-align:left">
								    <label for="transaction_name" style="text-align:left">Transaction Name</label>
								    <%= text_field(:transaction, :transaction_name,class:"form-control",placeholder:"Transaction Name") %>
								  </div>
								  <div class="form-group">
								    <label for="type">Transaction Type</label>
								    <div class="radio" style="margin-left: 25px;">
									  <label>
									  	<%= f.radio_button :category, "2" %>
									   
									    Income
									  </label>
									</div>
									<div class="radio" style="margin-left: 25px;">
									  <label>
									  	<%= f.radio_button :category, "1" %>
									    
									    Expense
									  </label>
									</div>
								  </div>
								  <div class="form-group">
								    <label for="value">Value</label>
								    <%= text_field(:transaction, :value,class:"form-control",placeholder:"Value") %>
								    
								  </div>

								  <%= f.hidden_field :created_by, value:"1" %>
								  <%= f.hidden_field :updated_by, value:"1" %>
								  <!-- <div class="form-group">
								    <label for="exampleInputEmail1">Description Detail</label>
								    <%= text_area_tag(:description, "", size: "24x3",class:"form-control") %>
								  </div> -->
								  <div class="form-group">
								  	<input type="submit" class="btn btn-primary" value="Add"> 
								  </div>
								<% end %>
	                     	</div>
                     	</div>
					</div>
				</div> <!-- Panel -->
			</div><!-- Col md -12 -->
		</div><!-- Row -->
	</div><!--  content -->
</div><!-- Box Content -->					
						       