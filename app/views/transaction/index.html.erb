
<div class="page-title-breadcrumb">
	<div class="page-header pull-left">
		<div class="page-title">Transaction</div>
	</div>
	<ol class="breadcrumb page-breadcrumb hidden-xs">
        <li><i class="fa fa-home"></i>&nbsp;
        	<%= link_to "Home", :controller => "transaction", :action => "index" %>
        	&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">Transaction</li>
        <!-- <li class="active">Invoice</li> -->
    </ol>
</div>
<div class="box-content">
	<div class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="panel">

					<div class="panel-heading">
						<div class="row" style="padding-top:10px;padding-bottom:10px">
							<div class="col-md-6">
							<h4>Transaction</h4>
	                     	</div>
	                     	<div class="col-md-6">
                         	 	<form class="form-search left" action="#">
	                             <div class="input-icon right"><i class="icon-magnifier"></i><input type="text" class="form-control" placeholder="Search...">
	                              </div>
	                         </form>
                         	</div>
                     	</div>
					</div>

					<div class="panel-body">
					<%# daftar transaksi %>
					<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add</a><br/>
					<br/>

					<table class="table table-bordered">
						<tr>
							<th rowspan="2">Date</th>
					  		<th rowspan="2">Transaction Name</th>
					  		<th colspan="2">Value</th>
					  		<!-- <th>Transaction Type</th> -->
					  		<th rowspan="2">
					  			Total<br>
					  			(Income - Expense)
					  		</th>
					  		<th rowspan="2">Action</th>
						</tr>
						<tr>
							<th>Income</th>
							<th>Expense</th>
						</tr>
					</table>
					<%# Form transaksi %>
					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
					  <div class="modal-dialog">
					    <div class="modal-content">
					    	<div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						        <h4 class="modal-title">Add Expense</h4>
					      	</div>
					      	<div class="modal-body">
								<form>
								  <div class="form-group">
								    <label for="name">Transaction Name</label>
								    <input type="text" class="form-control" id="transaction_name" placeholder="Transaction">
								  </div>
								  <div class="form-group">
								    <label for="type">Transaction Type</label>
								    <div class="radio" style="margin-left: 25px;">
									  <label>
									    <input type="radio" name="category" value="1" checked>
									    Income
									  </label>
									</div>
									<div class="radio" style="margin-left: 25px;">
									  <label>
									    <input type="radio" name="category" value="2">
									    Expense
									  </label>
									</div>
								  </div>
								  <div class="form-group">
								    <label for="value">Value</label>
								    <input type="text" class="form-control" id="value" placeholder="Value">
								  </div>
								  <div class="form-group">
								    <label for="exampleInputEmail1">Description Detail</label>
								    <textarea class="form-control" rows="3"></textarea>
								  </div>
								 
								</form>
							</div>
							<div class="modal-footer">
						        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						        <button type="button" class="btn btn-primary">Save changes</button>
					      	</div>
						</div><!-- /.modal-content -->
					  </div><!-- /.modal-dialog -->
					</div><!-- /.modal -->
					</div>
				</div> <!-- Panel -->
			</div><!-- Col md -12 -->
		</div><!-- Row -->
	</div><!--  content -->
</div><!-- Box Content -->

<style>
	table th {
		text-align: center;
		vertical-align: middle !important;
	}
</style>
