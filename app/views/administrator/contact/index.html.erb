<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-phone "></i>
            <span class="caption-subject bold uppercase">Contact List</span>
            
        </div>
        
    </div>
                <div class="portlet-body"><!-- Begin body -->
                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        
                        <% @contact.each do |t| %>
                            <tr>
                                <td><%= t.name %></td>
                                <td><%= t.email %></td>
                                
                                <td>
                                    <%= link_to "Edit",{:controller=>"administrator/contact",:action=>"edit",:id=>t.id},:class=>"btn btn-sm btn-warning" %>

                                   
                                </td>
                                <td>
                                 <%= link_to "Delete",{ :controller=>"administrator/contact",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn  btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %>
                                </td>
                            </tr>
                        <% end %>
                    </table>
                    
                        <%= paginate @contact %>
    </div><!-- End Body -->
</div><!-- End Portlet -->