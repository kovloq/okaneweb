<h3 class="page-title">Category</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "administrator/category", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">Category</a>
        </li>
    </ul>
</div>

<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-list "></i>
            <span class="caption-subject bold uppercase">Category List</span>
            
        </div>
        <div class="actions">
            <%= link_to('/administrator/category/new', {:name => 'New Category',:title=>'New Category',:class=>"btn btn-circle btn-primary"}) do %>
                <i class="fa fa-plus"></i>
                <span class="hidden-480">New</span>
            <% end %>
        </div>
    </div>

    <div class="portlet-body"><!-- Begin body -->
                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Color</th>
                            <th>Type</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        
                        <% @category.each do |t| %>
                            <tr>
                                <td><%= t.name %></td>
                                <td><%= t.color %></td>
                                <td><%= t.tipe==1? "Income" : "Expense" %></td>
                                <td>
                                    <%= link_to "Edit",{:controller=>"administrator/category",:action=>"edit",:id=>t.id},:class=>"btn btn-sm  btn-warning" %>

                                    
                                </td>
                                <td><%= link_to "Delete",{ :controller=>"administrator/category",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
                            </tr>
                        <% end %>
                    </table>
                    
                        <%= paginate @category %>
                  
    </div><!-- End Body -->
</div><!-- End Portlet -->