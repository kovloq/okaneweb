<h3 class="page-title">Admin</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <%= link_to "Home", :controller => "administrator/admin", :action => "index" %>
            &nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;
        </li>
        
        <li>
        <a href="#">Admin</a>
        </li>
    </ul>
</div>

<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-user "></i>
            <span class="caption-subject bold uppercase">Admin List</span>
            
        </div>
        <div class="actions">
            <%= link_to('/administrator/admin/new', {:name => 'New Admin',:title=>'New Admin',:class=>"btn btn-circle btn-primary"}) do %>
                <i class="fa fa-plus"></i>
                <span class="hidden-480">New</span>
            <% end %>
        </div>
    </div>

    <div class="portlet-body"><!-- Begin body -->
        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            
                            <% @admin.each do |t| %>
                                <tr>
                                    <td><%= t.name %></td>
                                    <td><%= t.username %></td>
                                    <td><%= t.email %></td>
                                    
                                    <td>
                                        <%= link_to "Edit",{:controller=>"administrator/admin",:action=>"edit",:id=>t.id},:class=>"btn btn-sm btn-warning" %>

                                        
                                    </td>
                                    <td><%= link_to "Delete",{ :controller=>"administrator/admin",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
                                </tr>
                    <% end %>
        </table>
   
        <%= paginate @admin %>
    
    </div><!-- End Body -->
</div><!-- End Portlet -->
                    
                