<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-question "></i>
            <span class="caption-subject bold uppercase">FAQ List</span>
            
        </div>
        <div class="actions">
            <%= link_to('/administrator/faq/new', {:name => 'New FAQ',:title=>'New FAQ',:class=>"btn btn-circle btn-primary"}) do %>
                <i class="fa fa-plus"></i>
                <span class="hidden-480">New</span>
            <% end %>
        </div>
    </div>


    <div class="portlet-body"><!-- Begin body -->
                    <table class="table table-bordered">
                        <tr>
                            <th>Title</th>
                            <th>Order</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        
                        <% @faq.each do |t| %>
                            <tr>
                                <td><%= t.title %></td>
                                <td><%= t.order %></td>
                                
                                <td>
                                    <%= link_to "Edit",{:controller=>"administrator/faq",:action=>"edit",:id=>t.id},:class=>"btn btn-sm btn-warning" %>

                                    
                                </td>
                                <td><%= link_to "Delete",{ :controller=>"administrator/faq",:action=>"destroy", :id=> t.id }, {:method => :delete,:class=>"btn btn-sm btn-danger",:data => {:confirm => 'Are you sure?'}} %></td>
                            </tr>
                        <% end %>
                    </table>
                    
                        <%= paginate @faq %>
                    
    </div><!-- End Body -->
</div><!-- End Portlet -->